@{
    ViewData["Title"] = "Profile";
}

<div class="row" ref="profileList">
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <div class="row mb-5">
                    <div class="col-md-12">
                        <div class="d-flex justify-content-center mb-4 mt-1">
                            <img src="~/images/avatar/11.png" width="160" height="160" alt="">
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="d-flex justify-content-center align-items-center mb-4">
                            <div class="">
                                <h3 class="mb-0">Burakhan Wolf</h3>
                                <p class="text-muted mb-0">burakhanwolf</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mb-5">
                    <div class="col">
                        <div class="card card-profile text-center">
                            <span class="mb-1 text-primary"></i></span>
                            <h3 class="mb-0">263</h3>
                            <p class="text-muted px-4">Your comments</p>
                        </div>
                    </div>
                    <div class="col">
                        <div class="card card-profile text-center">
                            <span class="mb-1 text-warning"></i></span>
                            <h3 class="mb-0">263</h3>
                            <p class="text-muted">Interactions</p>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header d-flex justify-content-center align-items-center">
                <h3 class="card-title">
                    Your Questions
                </h3>
            </div>
            <div class="card-body">
                <div class="media media-reply pb-2" v-for="(question) in profileQuestionData" :key="question.id">
                    <div class="media-body">
                        <div class="d-sm-flex justify-content-between mb-2">
                            <div>
                                <h5 class="mb-sm-0"> {{question.title}}</h5>
                            </div>
                            <div>
                                <small class="text-muted ml-3"> {{ timeSince(question.createdDate) }}</small>
                            </div>
                        </div>
                        <h7>
                            {{question.description}}
                        </h7>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-5">
        <div class="card">
            <div class="card-header d-flex justify-content-center align-items-center">
                <h3 class="card-title">
                    Your Interactions
                </h3>
            </div>
            <div class="card-body">
                <div class="media media-reply pb-2" v-for="(comment, index) in profileInteractionData" :key="index">
                    <img class="mr-3 circle-rounded" v-bind:src="'/images/avatar/' + comment.profilePicture + '.jpg'" width="50" height="50" alt="Generic placeholder image">
                    <div class="media-body">
                        <div class="d-sm-flex justify-content-between mb-2">
                            <h5 class="mb-sm-0">{{comment.name}} <small class="text-muted ml-3">{{timeSince(comment.createdDate)}}</small></h5>
                            <div class="media-reply__link d-flex justify-content-around">
                                <div class="d-flex justify-content-center align-items-center mr-3">
                                    <span>{{comment.likeCount}}</span>
                                    <button class="btn btn-transparent p-0 ml-1" v-on:click="like(index)"><i class="fa fa-thumbs-up"></i></button>
                                </div>
                                <div class="d-flex justify-content-between align-items-center mr-3">
                                    <span>{{comment.disLikeCount}}</span>
                                    <button class="btn btn-transparent p-0 ml-1" v-on:click="disLike(index)"><i class="fa fa-thumbs-down"></i></button>
                                </div>
                                <button class="btn btn-transparent text-dark font-weight-bold p-0 ml-2">Report</button>
                            </div>
                        </div>
                        <h7>{{comment.content}}</h7>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>